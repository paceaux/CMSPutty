.explorer
	+e(editor)
		+e(form)
			padding: .618em
			background: #efefef

.editForm
	display:flex
	flex-direction: column
	flex-wrap:nowrap
	padding: .618em
	+e(title)
		font-size: 1.25em;
		padding: .618em
		width: 100%
		margin: 1.618rem 0
	+e(text)
		padding: .618rem
		min-height: 15em;
		width: 100%
	+e(inputs)
		flex-grow: 1
		flex-shrink:0
	+e(controls)
		flex-shrink:0
		flex-grow:0
	+e(tags)
		background: #e9e9e9
